{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./",
    "composite": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "baseUrl": "./packages",
    "paths": {
      "@nerval/*": ["./*/src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
